@model RealEstate.Rentals.PostRental

@{
    ViewBag.Title = "Post";
}

<h2>Post Rental</h2>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="form-horizontal">
        <div class="form-group">
            @Html.LabelFor(x => x.Description, new { @class = "col-md-5" })
            <div class="col-md-10">
                @Html.EditorFor(x => x.Description)
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(x => x.NumberOfRooms, new { @class = "col-md-5" })
            <div class="col-md-10">
                @Html.EditorFor(x => x.NumberOfRooms)
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(x => x.Price, new { @class = "col-md-5" })
            <div class="col-md-10">
                @Html.EditorFor(x => x.Price)
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(x => x.Address, new { @class = "col-md-5" })
            <div class="col-md-10">
                @Html.TextAreaFor(x => x.Address)
            </div>
        </div>


        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Post" class="btn btn-default"/>
            </div>
        </div>
    </div>
}